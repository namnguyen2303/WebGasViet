                <div class="tab-content p-l-0 p-r-0 bg-white">
                    <div class="tab-pane active">
                        <nav class="sidebar-nav">
                            <ul class="main-menu metismenu">
                                <li id="tabHome">
                                    <a href="/Home/Index"><i class="fa fa-tachometer ic-menu"></i>Tổng quan</a>
                                </li>
                                <li id="tabBatch" class="">
                                    <a href="/Batch/Index"><i class="fa fa-check-square-o ic-menu"></i>Tích điểm</a>
                                </li>
                                <li id="tabCard">
                                    <a href="/Card/Index"><i class="fa fa-credit-card ic-menu"></i>Thẻ cào</a>
                                </li>
                                <li id="tabItem">
                                    <a href="/Item/Index"><i class="fa fa-product-hunt ic-menu"></i>Sản phẩm</a>
                                </li>
                                <li id="tabAgent">
                                    <a href="/Agent/Index"><i class="fa fa-money ic-menu"></i>Đại lý</a>
                                </li>
                                <li id="tabShop">
                                    <a href="/Shop/Index"><i class="fa fa-shopping-basket ic-menu"></i>Cửa hàng</a>
                                </li>
                                <li id="tabOrder">
                                    <a href="/Order/Index"><i class="fa fa-bitcoin ic-menu"></i>Đơn hàng</a>
                                </li>
                                <li id="tabRequest">
                                    <a href="/Request/Index"><i class="fa fa-gift ic-menu"></i>Đổi hiện vật</a>
                                </li>
                                <li id="tabWarranty">
                                    <a href="/Warranty/Index"><i class="fa fa-bookmark-o ic-menu"></i>Mã khuyến mãi</a>
                                </li>
                                <li id="tabPoint">
                                    <a href="/Point/Index"><i class="fa fa-exchange ic-menu"></i>Lịch sử giao dịch</a>
                                </li>
                                <li id="tabCustomer">
                                    <a href="/Customer/Index"><i class="fa fa-users ic-menu"></i>Khách hàng</a>
                                </li>
                                <li id="tabMessage">
                                    <a href="/Message/Chat"><i class="fa fa-wechat ic-menu"></i>Chat</a>
                                </li>
                                <li id="tabStatistic">
                                    <a href="#" class="has-arrow"><i class="fa fa-line-chart ic-menu"></i>Thống kê</a>
                                    <ul id="ulStatistic">
                                        <li id="tabStatisticGift"><a href="/StatisticGift/Index"><i class="fa fa-gift"></i>Đổi quà</a></li>
                                        <li id="tabStatisticPoit"><a href="/StatisticPoit/Index"><i class="fa fa-sort-numeric-asc"></i>TOP tích điểm</a></li>
                                        <li id="tabStatisticRevenue"><a href="/StatisticRevenue/Index"><i class="fa fa-money"></i>Doanh Thu</a></li>
                                    </ul>
                                </li>
                                <li id="tabConfig">
                                    <a href="/Config/Index"><i class="fa fa-gears ic-menu"></i>Thiết lập</a>
                                </li>
                                <li id="tabNews">
                                    <a href="/News/Index"><i class="fa fa-newspaper-o ic-menu"></i>Tin tức</a>
                                </li>
                                <li id="tabUser">
                                    <a href="/User/Index"><i class="fa fa-user-secret ic-menu"></i>Tài khoản</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <div id="main-content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {

    })

    var app = angular.module("appDekko", []);
    app.controller("controllerDekko", function ($scope) { });
</script>

<div id="changePassword" class="modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><i class="fa fa-lock" aria-hidden="false"></i> Thay đổi mật khẩu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-12">
                        <label>Mật khẩu hiện tại</label>
                        <input class="form-control" type="password" id="txtCurrentPassword" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12 col-sm-12 col-12">
                        <label>Mật khẩu mới</label>
                        <input class="form-control" type="password" id="txtNewPassword" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12 col-sm-12 col-12">
                        <label>Xác nhận mật khẩu mới</label>
                        <input class="form-control" type="password" id="txtConfirmPassword" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" onclick="changePassword()">Thay đổi</button>
            </div>
        </div>
    </div>
</div>

@*modal loading *@
<div class="modal" id="modalLoad" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content text-center py-3">
            <div class="modal-body text-center">
                <i class="fa fa-spinner text-success fa-spin" style="font-size: 40px;"></i>
                <div class="col-md-12 text-center mt-2">
                    <span>Đang xử lý</span>
                </div>
            </div>
        </div>
    </div>
</div>