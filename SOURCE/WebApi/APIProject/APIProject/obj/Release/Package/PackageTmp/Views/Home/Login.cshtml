@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>DEKKO</title>
    @Styles.Render("~/dekko/css")
    @Scripts.Render("~/layout/js")
    @Scripts.Render("~/dekko/js")
    @Scripts.Render("~/bundle/js")
</head>
<body style="background: #ffd800;">
    @*<div class="divLoading" style="display: none">
        <img class="spinner" src="~/Content/images/index.rotate-pie-preloader-gif.svg" />
    </div>*@
    <div class="bg-image"></div>
    <div class="bg-text">
        <div class="col-md-12 px-0">
            <img src="~/Content/images/logo-dekko-auth.jpg" class="mt-3 mb-5" width="300" height="100" />
        </div>
        @*<h3 class="mt-3 mb-3">ADMIN</h3>*@
        <div class="txtLogin row mt-5" id="txtLogin">
            <input type="text" class="form-control col-md-10 inputLogin" placeholder="Tài khoản" id="txtUsernameLogin" name="">
            <i class="iconUsernameLogin fa fa-user-o"></i>
        </div>
        <div class="txtLogin row mt-1" id="txtLogin">
            <input type="password" class="form-control col-md-10 inputLogin" placeholder="Mật khẩu" id="txtPasswordLogin" name="">
            <i class="iconPasswordLogin fa fa-unlock-alt"></i>
        </div>
        <button class="col-md-11 btn btn-default mt-3 btnLogin" id="btnLogin" onclick="Login()">ĐĂNG NHẬP</button>
    </div>
</body>
</html>

<script>

$(document).ready(function () {

    $("#txtUsernameLogin").focus();

    $('.inputLogin').keypress(function (e) {
        var key = e.which;
        if (key == 13) {
            $("#btnLogin").click();
        }
    });

});

</script>