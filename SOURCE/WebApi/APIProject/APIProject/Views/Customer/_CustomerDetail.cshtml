@using Data.DB
@using Data.Model.APIWeb

@{
    Customer CusDetail = ViewBag.CusDetail;
    Ranking MemberRank = ViewBag.MemberRank;
    Ranking SliverRank = ViewBag.SliverRank;
    Ranking GoldRank = ViewBag.GoldRank;
    Ranking PlatinumRank = ViewBag.PlatinumRank;
}
<div class="content" id="backToIndex">
    <div class="col-md-12">
        <div class="breadcrumb-holder">
            <div class="row mb-3 mt-3">
                <div class="col-md-10 col-sm-10 col-9 text-dark px-0">
                    <h4><i class="fa fa-fw fa-users"></i> Thông tin khách hàng</h4>
                </div>
                <div class="col-md-2 col-sm-2 col-3 text-right px-0">
                    <a class="btn btn-outline-secondary" href="javascript:void(0);" onclick="backToIndexCustomer(@ViewBag.PageBefore)"><i class="fa fa-fw fa-arrow-left"></i> Trở về</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs justify-content-center" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#profile" onclick="">Thông tin cá nhân</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#BookHistory">Lịch sử đặt hàng</a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div id="profile" class="tab-pane active">
            <div class="row mx-0 mt-3 mb-3">
                <div class="col-md-12 offset-md-0 col-sm-10 offset-sm-1 col-10 offset-1 bg-white position-relative">
                    <h4>Thông tin khách hàng</h4>
                    <div class="text-center">
                        <div class="row pt-md-1 pt-sm-2 pt-2 mt-7">
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-2 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Họ và tên</span>
                                    </div>
                                    <div class="col-md-4 col-sm-10 col-10">
                                        <p class="text-bold">@CusDetail.Name</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-2 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Giới tính</span>
                                    </div>
                                    <div class="col-md-4 col-sm-10 col-10">
                                        @{
                                            if (CusDetail.Sex == 1) {
                                                <p class="text-bold" style="margin-left:-40px;">Nữ</p>
                                            } else {
                                                <p class="text-bold" style="margin-left:-40px;">Nam</p>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-1">
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-3 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Số điện thoại</span>
                                    </div>
                                    <div class="col-md-3 col-sm-10 col-10">
                                        <p class="text-bold" style="margin-left:-50px;">@CusDetail.Phone</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-2 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Email</span>
                                    </div>
                                    <div class="col-md-4 col-sm-10 col-10">
                                        @{
                                            if (CusDetail.Email == "" || CusDetail.Email == null) {
                                                <p class="text-white">.</p>
                                            } else {
                                                <p class="text-bold" style="margin-left:35px;">@CusDetail.Email</p>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="row mt-1">
                            
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-2 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Ngày sinh</span>
                                    </div>
                                    <div class="col-md-4 col-sm-10 col-10">
                                        <p class="text-bold">@CusDetail.DOB.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 col-sm-6">
                                <div class="row">
                                    <div class="col-md-2 offset-md-1 col-sm-2 col-2 text-left">
                                        <span>Địa chỉ</span>
                                    </div>
                                    <div class="col-md-4 col-sm-10 col-10">
                                        <p class="text-bold">@CusDetail.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
