@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">

        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-check"></i> Thông tin phong học</span>

    </div>
</div>

<section class="dashboard-counts pt-4">
    <div class="container-fluid">

        <div class="row mt offset-sm-0 offset-md-1 offset-lg-2">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row mb-2 seach-User">
                    <div class="row col-lg-12">
                        <div class="col-md-12 row">

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Tên Cơ Sở </span>
                                </div>
                                <select class="form-control text_seach seach_parent seach_parent" id="cmb_seach_Name_Branch" name="STATUS">
                                    <option value="0">---Tất cả---</option>
                                </select>
                            </div>
                            <div class="input-group mb-2 col-4 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Tên phòng học</span>
                                </div>
                                <input class="form-control text_seach seach_parent" name="Studient" id="txt_search_name_studient" />
