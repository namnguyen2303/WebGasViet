
@using Data.Business
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="breadcrumb-holder">
    <div class="container-fluid">

        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-user"></i> Quản lý học sinh</span>

    </div>
</div>

@*Hiển thị các ô tìm kiếm học sinh*@
<section class="dashboard-counts pt-4">
    <div class="container-fluid">

        <div class="row mt">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row mb-2 seach-User">
                    <div class="row col-lg-12">
                        <div class="col-md-12 row">

                            <div class="input-group mb-2 col-12 col-sm-6 col-md-6 col-xl-4 col-lg-6 input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:105px">Tên học sinh</span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent" name="" id="txt_seach_name_student_parent">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-6 col-md-6 col-xl-4 col-lg-6  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:105px">Tên phụ huynh</span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent" name="" id="txt_seach_name_parent">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-6 col-md-6 col-xl-4 col-lg-6  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:105px">Số điện thoại </span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent" name="" id="txt_seach_phone_parent">
                            </div>
                            <div class="input-group mb-2 col-12 col-sm-6 col-md-6 col-xl-4 col-lg-6  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:105px">Ngày tạo </span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent" name="" id="txt_seach_create_parent">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-6 col-md-6 col-xl-4 col-lg-6  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:105px">Trạng thái </span>
                                </div>

                                <select class="form-control text_seach seach_parent seach_parent" id="txt_seach_sattus_parent" name="STATUS">
                                    <option value="2">--lựa chọn trang thái lớp học--</option>
                                    <option value="0">chưa ghép lớp</option>
                                    <option value="1">đã ghép lớp</option>

                                </select>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>


@*Phần hiên thị danh sách của học viên*@

<section class="dashboard-header section-padding">
    <div class="container-fluid">
        <div class="row d-flex align-items-md-stretch">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <button type="submit" class="btn btn-large btn-primary btn_header mr-2 pull-right btn_Parent" onclick="ExprotParent()"><i class="fa fa-sign-out"></i> In báo cáo</button>
                        <button type="submit" class="btn btn-large btn-danger btn_header mr-2 pull-right btn_Parent" onclick="DeleteListParent()"><i class="fa fa-trash-o" aria-hidden="true"></i>   Xóa</button>
                        <button type="button" class="btn btn-large btn-info btn_header mr-2 pull-right btn_Parent" id="btn_add_parent"><i class="fa fa-plus-square"></i>  Thêm mới</button>
                        <button type="submit" class="btn btn-large btn-primary btn_header mr-2  pull-right btn_Parent" onclick="SeachParent()"><i class="fa fa-search"></i>   Tìm kiếm</button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" id="Table_Parent">
                            @{
                                Html.RenderAction("Seach", new { Page = 1, NAME = ViewBag.STUDENT_NAME, STUDENT_PHONE = ViewBag.STUDENT_PHONE, STUDENT_NAME = ViewBag.STUDENT_NAME, CREATED_DATE = ViewBag.CREATED_DATE, STATUS = ViewBag.STATUS });
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



<script src="~/Assets/Addmin/vendor/jquery/jquery.js"></script>
<script src="~/Assets/Addmin/vendor/jquery-ui-1.12.1.custom/jquery-ui.js"></script>

<!-- xóa thông tin người dùng  -->
<div class="modal " id="Modal_Del_Parent" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Xóa thông tin phụ huynh</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="CloseDeleteParent()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn xóa thông tin phụ huynh
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseDeleteParent()"><i class="fa fa-times"></i> Hủy</button>
                <button type="button" class="btn btn-danger" onclick="DelParent()"><i class="fa fa-trash-o" aria-hidden="true"></i> Xóa</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    function CloseDeleteParent() {
        $("#Modal_Del_Parent").hide(); 
    }
</script>