
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- navbar-->
<!-- Counts Section -->

<div class="breadcrumb-holder">
    <div class="container-fluid">

        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-user"></i> Quản lý người dùng</span>

    </div>
</div>
<section class="dashboard-counts pt-4">
    <div class="container-fluid">

        <div class="row mt">
            <div class="col-lg-12 col-md-12 col-sm-12">

                <div class="row mb-2 seach-User">
                    <div class="col-md-2 col-12 col-sm-12 col-md-3 col-lg-2 col-xl-2 "> <p class="label_Name">Thông tin tài khoản</p></div>
                    <div class="form-group col-12 col-sm-12 col-md-4 col-lg-5 col-xl-5">
                        <input type="text" name="name" class="form-control text_seach" id="txtSeachUserByUserName" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                        <div class="validate"></div>
                    </div>
                    <div class="form-send col-md-4 col-12 col-sm-12 ">
                        <button type="submit" class="btn btn-large btn-primary btn_header mr-2" onclick="SeachUser()"><i class="fa fa-search"></i> Tìm kiếm</button>
                        <button type="submit" class="btn btn-large btn-info btn_header" data-toggle="modal" data-target="#Modal_Add_User"><i class="fa fa-plus-square"></i> Thêm mới</button>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>
<!-- Header Section-->
<section class="dashboard-header section-padding">
    <div class="container-fluid">
        <div class="row d-flex align-items-md-stretch">
            <div class="col-lg-12">
                <div class="card" id="Table_User">
                    @{
                        Html.RenderAction("Seach", new { Page = 1, UserName = "" });
                    }

                </div>
            </div>
        </div>
    </div>
</section>




<!-- Modal thêm mới thông tin người dùng  -->
<div class="modal " id="Modal_Add_User" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Thêm mới thông tin tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="FormAdd_User">
                    <div class="col-lg-12 col-md-12 col-sm-12">

                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Tài khoản</span>
                            </div>
                            <input type="text" class="form-control text_seach" name="USER_NAME" id="txtAddUserNameUser">
                        </div>
                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Email</span>
                            </div>
                            <input type="email" class="form-control text_seach" name="EMAIL" id="txtAddMailUser">
                        </div>
                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Mật khẩu</span>
                            </div>
                            <input type="password" class="form-control text_seach" name="PASSWORD" id="txtAddPassUser">
                        </div>

                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Chức vụ</span>
                            </div>
                            <select class="form-control text_seach" id="txtAddRoleUser" name="ROLE">
                                <option value="0">-- Nhập lựa chọn chức vụ --</option>
                                <option value="1">Admin</option>
                                <option value="2">Kiểm soát 1</option>
                                <option value="3">Kiểm soát 2 </option>

                            </select>
                        </div>

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times"></i> Hủy</button>
                <button type="button" class="btn btn-primary" onclick="AddUser()"><i class="fa fa-save"></i> Lưu</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal cập nhập thông tin người dùng -->
<div class="modal " id="Modal_Edit_User" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Cập nhập thông tin tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloesEidtUser()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="Form_EditUser">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <input type="hidden" class="form-control text_seach" name="ID" id="txtEditIdUser" value="0">
                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Tài khoản</span>
                            </div>
                            <input type="text" class="form-control text_seach" name="USER_NAME" id="txtEditUserNameUser">
                        </div>
                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Email</span>
                            </div>
                            <input type="email" class="form-control text_seach" name="EMAIL" id="txtEditMailUser">
                        </div>
                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Mật khẩu</span>
                            </div>
                            <input type="password" class="form-control text_seach" name="PASSWORD" id="txtEditPassUser">
                        </div>

                        <div class="input-group mb-3 input-group-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:100px">Chức vụ</span>
                            </div>
                            <select class="form-control text_seach" id="txtEditRoleUser" name="ROLE">
                                <option value="0">-- Nhập lựa chọn chức vụ --</option>
                                <option value="1">Admin</option>
                                <option value="2">Kiểm soát 1</option>
                                <option value="3">kiểm soat 2</option>

                            </select>
                        </div>

                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="ResetPassword()"><i class="fa fa-times"></i> Reset mật khẩu</button>
                <button type="button" class="btn btn-primary" onclick="EditUser()"><i class="fa fa-save"></i> Lưu</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloesEidtUser()"><i class="fa fa-times"></i> Hủy</button>
            </div>
        </div>
    </div>
</div>

<!-- xóa thông tin người dùng  -->
<div class="modal " id="Modal_Del_User" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Xóa thông tin tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="CloseDeleteUser()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn xóa thông tin tài khoản
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseDeleteUser()"><i class="fa fa-times"></i> Hủy</button>
                <button type="button" class="btn btn-danger" onclick="DelUser()"><i class="fa fa-trash-o" aria-hidden="true"></i> Xóa</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal cập nhập thông tin người dùng -->
<div class="modal " id="Modal_Edit_Pass_User" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Cập nhập lại mật khẩu cho tài khoản</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="CloseEditPassUser()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div class="col-lg-12 col-md-12 col-sm-12">

                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="width:135px">Mật khẩu mới</span>
                        </div>
                        <input type="text" class="form-control text_seach" name="USER_NAME" id="txtEditPasswordUser">
                    </div>
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" style="width:135px">Xác nhận mật khẩu</span>
                        </div>
                        <input type="email" class="form-control text_seach" name="EMAIL" id="txtEditPassCheck">
                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="CloseEditPassUser()"><i class="fa fa-times"></i> Hủy</button>
                <button type="button" class="btn btn-primary" onclick="EditPassword()"><i class="fa fa-save"></i> Lưu</button>
            </div>
        </div>
    </div>
</div>
