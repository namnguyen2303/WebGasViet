
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="breadcrumb-holder">
    <div class="container-fluid">
        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-envelope"></i> Quản lí tin nhắn</span>
    </div>
</div>
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-2 offset-2">
            <span class="mt-2">Danh sách tin nhắn</span>
        </div>
        <div class="col-3">
            <select class="form-control">
                <option>Đã gửi</option>
                <option>Chưa gửi</option>
                <option>Gửi thất bại</option>
            </select>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2 offset-2">
            <span class="mt-2">Tên học sinh</span>
        </div>
        <div class="col-3">
            <input type="text" class="form-control" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-2 offset-2">
            <span class="mt-2">Loại tin nhắn</span>
        </div>
        <div class="col-3">
            <select class="form-control">
                <option>Gửi tin nhắn qua SMS</option>
                <option>Gửi tin nhắn qua App</option>
            </select>
        </div>
    </div>
    <div class="row mt-5 offset-3">
        <div class="col-2">
            <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Tìm kiếm</button>
        </div>
        <div class="col-2">
            <button type="button" class="btn btn-info"><i class="fa fa-trash"></i> Xóa</button>
        </div>
        <div class="col-2">
            <button type="button" class="btn btn-danger" onclick="OpenReplyMesssenger()" ><i class="fa fa-reply"></i> Gửi lại tin nhắn</button>
        </div>
    </div>
</div>
