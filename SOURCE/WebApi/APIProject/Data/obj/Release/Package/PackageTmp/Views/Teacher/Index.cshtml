
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb-holder">
    <div class="container-fluid">
        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-book"></i> Quản lý giáo viên</span>
    </div>
</div>
@*Hiển thị các ô tìm kiếm giáo viên*@
<section class="dashboard-counts pt-4">
    <div class="container-fluid">

        <div class="row mt">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row mb-2 seach-User">
                    <div class="row col-lg-12">
                        <div class="col-md-12 row">

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Tên giáo viên</span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent " name="" id="txt_seach_name_teacher">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Số điện thoại</span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent " name="" id="txt_seach_phone_teacher">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Trạng thái</span>
                                </div>

                                <select class="form-control text_seach seach_parent " id="cb_seach_sattus_teacher" name="STATUS">
                                    <option>--lựa chọn--</option>
                                    <option value="0">Giáo viên chính thức</option>
                                    <option value="1">Giáo viên thử việc</option>
                                    <option value="2">Hêt hạn hợp đồng</option>
                                </select>

                            </div>

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4 input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Bộ môn giảng dạy </span>
                                </div>

                                <select class="form-control text_seach seach_parent seach_teacher Select_subject" id="cb_seach_subject_teacher" name="">
                                    <option value="0">--lựa chọn--</option>
                                </select>

                            </div>

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Thời gian tạo </span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent datepicker_teacher" name="" id="txt_seach_create_teacher">
                            </div>

                            <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4 input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:160px">Đến ngày </span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent datepicker_teacher" name="" id="txt_seach_create_end_teacher">
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div>
</section>
<section class="dashboard-header section-padding">
    <div class="container-fluid">
        <div class="row d-flex align-items-md-stretch">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">

                        <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4 input-group-sm pull-left">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width:80px">Số bản ghi </span>
                            </div>
                            <input type="number" style="width:80px" value="@ViewBag.LIST_COUNT" id="txt_count_list_teacher" class="page_count text_seach seach_parent form-control-sm">
                        </div>
                        <button type="submit" class="btn btn-large btn-primary btn_header mr-2 pull-right btn_Parent" onclick=""><i class="fa fa-sign-out "></i> In báo cáo</button>
                        <button type="submit" class="btn btn-large btn-danger btn_header mr-2 pull-right btn_Parent" onclick="DeleteListTeacher()"><i class="fa fa-trash-o" aria-hidden="true"></i>   Xóa</button>
                        <button type="button" class="btn btn-large btn-info btn_header mr-2 pull-right btn_Parent" onclick="window.location='/teacher/create'"><i class="fa fa-plus-square"></i>  Thêm mới</button>
                        <button type="submit" class="btn btn-large btn-primary btn_header mr-2  pull-right btn_Parent" onclick="SeachTeacher()"><i class="fa fa-search"></i>   Tìm kiếm</button>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" id="Table_Teacher">
                            @{
                                Html.RenderAction("Seach", new { Page = ViewBag.PAGE_LIST, Count = ViewBag.LIST_COUNT, NAME = "", PHONE = "", });
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<script src="~/Assets/Addmin/vendor/jquery/jquery.js"></script>
<script src="~/Assets/Addmin/vendor/jquery-ui-1.12.1.custom/jquery-ui.js"></script>

<!-- xóa thông tin người dùng  -->
<div class="modal " id="Modal_Del_Teacher" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header bg-info ">
                <h5 class="modal-title" style="color:white;font-weight:bold;" id="exampleModalLabel">Xóa thông tin giáo viên</h5>
                <button type="button" class="close" data-dismiss="modal" onclick="Close_Modal_Delete_Teacher()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn xóa thông tin giáo viên
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="Close_Modal_Delete_Teacher()"><i class="fa fa-times"></i> Hủy</button>
                <button type="button" class="btn btn-danger" onclick="DelTeacher()"><i class="fa fa-trash-o" aria-hidden="true"></i> Xóa</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    function Close_Modal_Delete_Teacher() {
        $("#Modal_Del_Teacher").hide(); 
    }
    function Show_Modal_Delete_Teacher() {
        $("#Modal_Del_Teacher").show(); 
    }
</script>