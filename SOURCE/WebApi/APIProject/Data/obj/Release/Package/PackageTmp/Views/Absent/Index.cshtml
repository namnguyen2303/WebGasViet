
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- navbar-->
<!-- Counts Section -->

<div class="breadcrumb-holder">
    <div class="container-fluid">

        <span class="h2 pt-3 pb-3 pl-0 "><i class="fa fa-check"></i> Thông Tin điểm danh</span>

    </div>
</div>
<section class="dashboard-counts pt-4">
    <div class="container-fluid">

        <div class="row mt">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="row mb-2 seach-User">
                    <div class="row col-lg-12">
                        <div class="col-md-12 row">

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12 input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Tên lớp học</span>
                                </div>
                                <select class="form-control text_seach seach_parent seach_parent Select_Class" id="txt_seach_class_name_in_absent" name="">
                                    <option value="0">---Tất cả---</option>
                                </select>
                            </div>

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Từ ngày</span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent datepicker_absent" name="" id="txt_seach_start_date_in_absent">

                            </div>

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Đến ngày </span>
                                </div>
                                <input type="text" class="form-control text_seach seach_parent datepicker_absent" name="" id="txt_seach_end_date_in_absent">

                            </div>

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12 input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Trạng thái </span>
                                </div>
                                <select class="form-control text_seach seach_parent seach_parent" id="txt_seach_status_in_absent" name="STATUS">
                                    <option value="0">---Tất cả---</option>
                                    <option value="1">Đang chờ kiểm duyêt</option>
                                    <option value="2">Đã kiểm duyêt lần 1</option>
                                    <option value="3">Điểm danh sai</option>
                                    <option value="4">Điểm danh thành công</option>
                                </select>
                            </div>

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Cơ sở </span>
                                </div>

                                <select class="form-control text_seach seach_parent seach_parent Select_branch" id="txt_seach_barch_id_in_absent" name="STATUS">
                                    <option value="0">---Tất cả---</option>
                                </select>

                            </div>

                            <div class="input-group mb-2 col-lg-4 col-xl-4 col-md-6 col-sm-12 col-12  input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="width:110px">Tên giáo viên</span>
                                </div>
                                <input class="form-control text_seach seach_parent" name="Tearch" id="txt_seach_teacher_in_absent" />
                            </div>
                           
                        </div>

                    </div>
                </div>
            </div>
        </div>

        
        
        <section class="dashboard-header section-padding mt-1">
            <div class="container-fluid">
                <div class="row d-flex align-items-md-stretch">
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="input-group mb-2 col-12 col-sm-12 col-md-6 col-xl-4 col-lg-4 input-group-sm pull-left">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" style="width:80px">Số bản ghi </span>
                                    </div>
                                    <input type="number" style="width:80px" value="@ViewBag.ABSENT_COUNT" id="txt_count_list_absent" class=" page_count text_seach seach_parent form-control-sm">
                                </div>
                                <button type="submit" class="btn btn-large btn-primary btn_header mr-2  pull-right btn_Parent" onclick="SeachAbsent()"><i class="fa fa-search"></i>   Tìm kiếm</button>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive" id="Table_Absent">

                                    @{
                                        Html.RenderAction("Seach", new { Page = 1,Count=ViewBag.ABSENT_COUNT, TEACHER_NAME = "" });
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>